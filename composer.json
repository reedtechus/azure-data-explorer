{
    "name": "reedtechus/azure-data-explorer",
    "description": "Interfaces PHP with Azure Data Explorer",
    "keywords": [
        "reedtechus",
        "azure",
        "data-explorer",
        "kusto"
    ],
    "homepage": "https://github.com/reedtechus/azure-data-explorer",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Reed",
            "email": "chris@reedtech.us",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "ReedTech\\AzureDataExplorer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReedTech\\AzureDataExplorer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
